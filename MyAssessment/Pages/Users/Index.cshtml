@page
@model MyAssessment.Pages.Users.IndexModel
@{
}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
        margin-top: 30px;
    }

    th, td {
        padding: 8px;
        text-align: center;
        border-bottom: 1px solid #ddd;
        border-left: 1px solid #ddd;
        border-right: 1px solid #ddd;
        border-top: 1px solid #ddd;
    }

    tr:hover {
        background-color: lightyellow;
    }
</style>

<br>
<h2>List of Users</h2>
<a class='btn btn-primary btn-sm' style ="margin-top:20px; width:90px; margin-left:93%" href='/Users/Create'>New User</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Skillsets</th>
            <th>Hobby</th>
            <th>Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listUsers)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.skill</td>
                <td>@item.hobby</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Users/Edit?id=@item.id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Users/Delete?id=@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

